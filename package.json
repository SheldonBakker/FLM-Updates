{
  "name": "gunlicence",
  "version": "0.8.0",
  "description": "Firearm Licence Management System",
  "main": "./dist/main/index.js",
  "author": "Sheldon Bakker",
  "homepage": "https://www.gunlicence.co.za/",
  "repository": {
    "type": "git",
    "url": "https://github.com/SheldonBakker/FLM-Updates"
  },
  "scripts": {
    "kill-processes": "taskkill /F /IM electron.exe /T 2>nul || exit 0",
    "clean": "npm run kill-processes && rimraf dist out",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run clean && electron-vite build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "dev:win": "npm run clean && electron-vite dev",
    "fix-registry": "reg add \"HKCU\\Software\\Classes\\CLSID\\{86ca1aa0-34aa-4e8b-a509-50c905bae2a2}\\InprocServer32\" /ve /d \"\" /f",
    "prebuild:win": "npm run fix-registry"
  },
  "build": {
    "appId": "co.za.gunlicence",
    "productName": "Gun Licence Management",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "publisherName": "Sheldon Bakker",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "license": "build/license.txt",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gun Licence Management",
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en-US"
      ],
      "language": "1033",
      "runAfterFinish": true
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@supabase/supabase-js": "^2.47.16",
    "@swc/core": "^1.10.8",
    "dotenv": "^16.4.7",
    "electron-log": "^5.2.4",
    "electron-updater": "^6.3.9",
    "react-icons": "^5.4.0",
    "react-router-dom": "^7.1.3",
    "react-toastify": "^11.0.3",
    "react-virtualized": "^9.22.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/google.maps": "^3.58.1",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "postcss": "^8.5.1",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
